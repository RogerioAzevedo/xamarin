<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="auladesabado.LoginPage" 
		Title="Login Teste" BackgroundColor="Green">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" HorizontalOptions ="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="15">
			<Entry x:Name="txtLogin" WidthRequest="300" HeightRequest="40" Placeholder="usuario" PlaceholderColor="Fuchsia" TextColor="Black" BackgroundColor="Purple"/>
			<Entry x:Name="txtSenha" WidthRequest="300" HeightRequest="40" Placeholder="senha" PlaceholderColor="Fuchsia" TextColor="Black" BackgroundColor="Purple" IsPassword="true"/>
		</StackLayout>
		<StackLayout>
			<Button x:Name="btnLogin" Clicked="Handle_Clicked"  WidthRequest="90" HeightRequest="50" Text="Login" BackgroundColor="Maroon" TextColor="Yellow">Login</Button>
			<Button x:Name="btnCadastrar" Clicked="Cadastrar_Clicked" WidthRequest="90" HeightRequest="50" Text="Cadastrar" BackgroundColor="Maroon" TextColor="Yellow">Cadastrar</Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
